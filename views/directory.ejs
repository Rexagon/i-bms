<h3 class="page-title"> Справочник </h3>

<div class="row">
  <div class="col-md-6">
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption">
          <i class="icon-share font-dark"></i>
          <span class="caption-subject bold uppercase">Страны</span>
        </div>
        <div class="table-toolbar">
          <div class="pull-right">
            <div class="btn-group">
              <button id="table-countries-new" class="btn green"> Добавить
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-hover table-bordered" id="table-countries">
          <thead>
            <tr>
              <th> Имя </th>
              <th> Действия </th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < countries.length; ++i) { %>
              <tr id="<%= countries[i].id %>">
                <td width="100%">
                  <%= countries[i].name %>
                </td>
                <td>
                  <div class="btn-group">
                    <button class="btn green btn-outline edit btn-icon-only" title="Изменить"><i class="fa fa-edit"></i></button>
                    <button class="btn red btn-outline delete btn-icon-only" title="Удалить"><i class="fa fa-times"></i></button>
                  </div>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption">
          <i class="icon-share font-dark"></i>
          <span class="caption-subject bold uppercase">Склады</span>
        </div>
        <div class="table-toolbar">
          <div class="pull-right">
            <div class="btn-group">
              <button id="table-warehouses-new" class="btn green"> Добавить
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-hover table-bordered" id="table-warehouses">
          <thead>
            <tr>
              <th> Имя </th>
              <th> Действия </th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < warehouses.length; ++i) { %>
              <tr id="<%= warehouses[i].id %>">
                <td width="100%">
                  <%= warehouses[i].name %>
                </td>
                <td>
                  <div class="btn-group">
                    <button class="btn green btn-outline edit btn-icon-only" title="Изменить"><i class="fa fa-edit"></i></button>
                    <button class="btn red btn-outline delete btn-icon-only" title="Удалить"><i class="fa fa-times"></i></button>
                  </div>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="portlet light bordered">
      <div class="portlet-title">
        <div class="caption">
          <i class="icon-share font-dark"></i>
          <span class="caption-subject bold uppercase">Области применения</span>
        </div>
        <div class="table-toolbar">
          <div class="pull-right">
            <div class="btn-group">
              <button id="table-apparea-new" class="btn green"> Добавить
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-hover table-bordered" id="table-apparea">
