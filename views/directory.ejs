                  <div class="btn-group">
                    <button class="btn green btn-outline edit btn-icon-only" title="Изменить"><i class="fa fa-edit"></i></button>
                    <button class="btn red btn-outline delete btn-icon-only" title="Удалить"><i class="fa fa-times"></i></button>
                  </div>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
