<h3 class="page-title"> Пользователи </h3>

<div class="row">
    <div class="col-md-12">
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <button id="table_new" class="btn green"> Добавить
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered" id="table">
                <thead>
                    <tr>
                        <th> Имя </th>
                        <th> Фамилия </th>
                        <th> Должность </th>
                        <th> Email </th>
                        <th> Статус </th>
                        <th> Права </th>
                        <th> Редактировать </th>
                        <th> Удалить </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < users.length; ++i) { %>
                    <tr>
                        <td> <%= users[i].info.name %> </td>
                        <td> <%= users[i].info.surname %> </td>
                        <td> <%= users[i].info.position %> </td>
                        <td> <%= users[i].email %> </td>
                        <td> <% if (users[i].info.status == "online") { %>
                            <span class="label label-sm label-success"> Online </span>
                            <% } else { %>
                            <span class="label label-sm label-danger"> Offline </span> <% } %>
                        </td>
                        <td><a class="btn default" data-toggle="modal" href="#modal" onclick="FillModal('<%= users[i].email %>')"><i class="fa fa-lock"></i> Изменить</a></td>
                        <td>
                            <a class="edit" href="javascript:;"> Редактировать </a>
                        </td>
                        <td>
                            <a class="delete" href="javascript:;"> Удалить </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

            <div class="modal fade" id="modal" tabindex="-1" role="modal" aria-hidden="true" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="access-table-title"></h4>
                        </div>
                        <div class="modal-body" id="modal-body"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal">Закрыть</button>
                            <button type="button" class="btn green" id="modal-save-button" data-dismiss="modal">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
